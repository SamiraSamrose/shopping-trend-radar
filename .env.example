# .env.example
# Copy this file to .env and fill in your values

# Application
APP_NAME=Shopping Trend Radar Agent
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000
WORKERS=4

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS Bedrock
BEDROCK_AGENT_ID=your_agent_id
BEDROCK_AGENT_ALIAS_ID=your_alias_id
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# SageMaker
SAGEMAKER_ENDPOINT_NAME=trend-prediction-endpoint
SAGEMAKER_EXECUTION_ROLE=your_sagemaker_role

# Nova SDK
NOVA_API_KEY=your_nova_api_key
NOVA_API_URL=https://api.nova.ai/v1

# Amazon Q
AMAZON_Q_APP_ID=your_q_app_id
AMAZON_Q_USER_ID=your_q_user_id

# Strands SDK
STRANDS_API_KEY=your_strands_key
STRANDS_WORKSPACE_ID=your_workspace_id

# S3
S3_BUCKET_NAME=shopping-trend-radar-data
S3_DASHBOARD_PREFIX=dashboards/
S3_DATA_PREFIX=data/

# Lambda
LAMBDA_DASHBOARD_FUNCTION=trend-radar-dashboard-generator
LAMBDA_ANALYZER_FUNCTION=trend-radar-analyzer

# External APIs
YOUTUBE_API_KEY=your_youtube_key
TIKTOK_CLIENT_KEY=your_tiktok_key
TIKTOK_CLIENT_SECRET=your_tiktok_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_secret
PINTEREST_ACCESS_TOKEN=your_pinterest_token
ETSY_API_KEY=your_etsy_key
WALMART_API_KEY=your_walmart_key
EBAY_APP_ID=your_ebay_app_id
TARGET_API_KEY=your_target_key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/trendradar
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
